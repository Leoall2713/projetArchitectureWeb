{% extends 'base.html.twig' %}

{% block title %}Salles index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Salles</h1>

        <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nom_salle</th>
                <th>Capacite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salle in salles %}
            <tr>
                <td>{{ salle.id }}</td>
                <td>{{ salle.nomSalle }}</td>
                <td>{{ salle.capacite }}</td>
                <td>
                    <a href="{{ path('app_salles_show', {'id': salle.id}) }}"class="btn btn-info btn-sm">show</a>
                    <a href="{{ path('app_salles_edit', {'id': salle.id}) }}"class="btn btn-info btn-sm">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Aucune salle trouv√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="mt-3">
    <a href="{{ path('app_salles_new') }}"class="btn btn-success">Ajouter une salle</a>
    </div>
</div>
{% endblock %}
