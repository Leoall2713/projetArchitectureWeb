{% extends 'base.html.twig' %}

{% block title %}Matieres index{% endblock %}

{% block body %}
    <h1>Matieres index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_matiere</th>
                <th>Duree_minute</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for matiere in matieres %}
            <tr>
                <td>{{ matiere.id }}</td>
                <td>{{ matiere.nomMatiere }}</td>
                <td>{{ matiere.dureeMinute }}</td>
                <td>
                    <a href="{{ path('app_matieres_show', {'id': matiere.id}) }}">show</a>
                    <a href="{{ path('app_matieres_delete', {'id': matiere.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_matieres_new') }}">Create new</a>
{% endblock %}
