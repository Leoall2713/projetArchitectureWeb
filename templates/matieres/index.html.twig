{% extends 'base.html.twig' %}

{% block title %}Matieres index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Matières</h1>

        <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nom_matiere</th>
                <th>Duree_minute</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for matiere in matieres %}
            <tr>
                <td>{{ matiere.id }}</td>
                <td>{{ matiere.nomMatiere }}</td>
                <td>{{ matiere.dureeMinute }}</td>
                <td>
                    <a href="{{ path('app_matieres_show', {'id': matiere.id}) }}"class="btn btn-info btn-sm">Voir</a>
                    <a href="{{ path('app_matieres_edit', {'id': matiere.id}) }}"class="btn btn-info btn-sm">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucune matière trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="mt-3">
        <a href="{{ path('app_matieres_new') }}"class="btn btn-success">Ajouter une nouvelle matière</a>
    </div>
</div>
{% endblock %}
