{% extends 'base.html.twig' %}

{% block title %}Reservations index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Réservations</h1>


        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Date</th>
                        <th>Heure début</th>
                        <th>Heure fin</th>
                        <th>Enseignant</th>
                        <th>Promotion</th>
                        <th>Matière</th>
                        <th>Salle</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for reservation in reservations %}
                    <tr>
                        <td>{{ reservation.id }}</td>
                        <td>{{ reservation.date ? reservation.date|date('Y-m-d') : '' }}</td>
                        <td>{{ reservation.heureDebut ? reservation.heureDebut|date('H:i:s') : '' }}</td>
                        <td>{{ reservation.heureFin ? reservation.heureFin|date('H:i:s') : '' }}</td>
                        <td>{{ reservation.enseignant.nomEnseigant }} {{ reservation.enseignant.prenomEnseignant }}</td>
                        <td>{{ reservation.promotion.niveauPromotion }} - {{ reservation.promotion.intituleFormation }}</td>
                        <td>{{ reservation.matiere.nomMatiere }}</td>
                        <td>{{ reservation.salle.nomSalle }}</td>
                        <td>
                            <a href="{{ path('app_reservations_show', {'id': reservation.id}) }}" class="btn btn-info btn-sm">Voir</a>
                            {{ include('reservations/_delete_form.html.twig', { 'class': 'd-inline' }) }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucune réservation trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {{ form_start(form) }}
            <div class="form-row">
                <div class="col">
                    {{ form_row(form.promotion, {'value': form.promotion.vars.value ? form.promotion.vars.value.id : null}) }}
                </div>
                <div class="col">
                    {{ form_row(form.salle, {'value': form.salle.vars.value ? form.salle.vars.value.id : null}) }}
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-primary">Filtrer</button>
                </div>
            </div>
        {{ form_end(form) }}
        <div class="mt-3">
            <a href="{{ path('app_reservations_new') }}" class="btn btn-success">Créer une nouvelle réservation</a>
        </div>
    </div>
{% endblock %}
