{% extends 'base.html.twig' %}

{% block title %}Promotions index{% endblock %}

{% block body %}
    <h1>Promotions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Niveau_promotion</th>
                <th>Intitule_formation</th>
                <th>Nb_etudiants</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.id }}</td>
                <td>{{ promotion.niveauPromotion }}</td>
                <td>{{ promotion.intituleFormation }}</td>
                <td>{{ promotion.nbEtudiants }}</td>
                <td>
                    <a href="{{ path('app_promotions_show', {'id': promotion.id}) }}">show</a>
                    <a href="{{ path('app_promotions_edit', {'id': promotion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_promotions_new') }}">Create new</a>
{% endblock %}
