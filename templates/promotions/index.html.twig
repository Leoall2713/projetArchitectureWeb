{% extends 'base.html.twig' %}

{% block title %}Promotions index{% endblock %}

{% block body %}
     <div class="container mt-4">
        <h1 class="mb-4">Promotions</h1>

        <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Niveau_promotion</th>
                <th>Intitule_formation</th>
                <th>Nb_etudiants</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.id }}</td>
                <td>{{ promotion.niveauPromotion }}</td>
                <td>{{ promotion.intituleFormation }}</td>
                <td>{{ promotion.nbEtudiants }}</td>
                <td>
                    <a href="{{ path('app_promotions_show', {'id': promotion.id}) }}"class="btn btn-info btn-sm">show</a>
                    <a href="{{ path('app_promotions_edit', {'id': promotion.id}) }}"class="btn btn-info btn-sm">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucune promotion trouv√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="mt-3">
    <a href="{{ path('app_promotions_new') }}"class="btn btn-success">Ajouter une promotion</a>
    </div>
</div>
{% endblock %}
